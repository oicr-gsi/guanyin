{
  "name": "guanyin",
  "version": "1.2.0",
  "description": "Report DB",
  "scripts": {
    "start": "node ./bin/www",
    "start:dev": "nodemon ./bin/www",
    "start:prod": "NODE_ENV=production nodejs --abort-on-uncaught-exception ./bin/www",
    "fw:clean": "docker run --rm -v $(pwd)/conf:/flyway/conf -v $(pwd)/sql:/flyway/sql --network=host boxfuse/flyway clean",
    "fw:migrate": "docker run --rm -v $(pwd)/conf:/flyway/conf -v $(pwd)/sql:/flyway/sql --network=host boxfuse/flyway migrate",
    "pretest": ". test/setup_test_db.sh",
    "test": "PORT=8083 DB_CONNECTION=postgres://test:test@localhost:5432/test_report_db mocha --exit",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git"
  },
  "author": "Xuemei Luo",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.4.0",
    "bluebird": "^3.5.1",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^4.0.0",
    "express": "^4.16.3",
    "joi": "^8.1.0",
    "morgan": "^1.9.1",
    "pg-promise": "^7.5.4",
    "prom-client": "^10.2.3",
    "serve-favicon": "~2.4.5",
    "swagger-jsdoc": "^1.10.0",
    "uid": "0.0.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^5.14.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1"
  }
}
