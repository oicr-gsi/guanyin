{
  "name": "guangyin",
  "version": "1.0.0",
  "description": "Report DB",
  "scripts": {
    "start": "node ./bin/www",
    "start:dev": "nodemon ./bin/www",
    "start:prod": "NODE_ENV=production nodejs --abort-on-uncaught-exception ./bin/www",
    "fw:clean": "flyway -X -configFiles=conf/flyway.conf clean",
    "fw:migrate": "flyway -X -configFiles=conf/flyway.conf -locations=filesystem:./sql/ migrate",
    "fw:test-clean": "flyway -X -configFiles=conf/flyway-test.conf clean",
    "fw:test-migrate": "flyway -X -configFiles=conf/flyway-test.conf -locations=filesystem:./sql/,filesystem:./test/sql/ migrate",
    "test": "PORT=8080 DB_CONNECTION=postgres://test:test@localhost:5432/test_report_db mocha --exit",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git"
  },
  "author": "Xuemei Luo",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.4.0",
    "bluebird": "^3.5.1",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^4.0.0",
    "express": "^4.16.3",
    "express-joi-validator": "^2.0.0",
    "joi": "^6.10.1",
    "morgan": "~1.9.0",
    "pg-promise": "^7.5.4",
    "prom-client": "^10.2.3",
    "serve-favicon": "~2.4.5",
    "swagger-jsdoc": "^1.9.7",
    "uid": "0.0.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.19.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1"
  }
}
